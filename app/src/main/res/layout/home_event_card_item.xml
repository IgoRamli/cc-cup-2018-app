<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/nama_bidang_tv"
        android:layout_width="wrap_content"
        android:maxWidth="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bola Voli Putra"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nama_lomba_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kualifikasi Pool A"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toTopOf="@id/nama_peserta_tv"
        app:layout_constraintEnd_toStartOf="@+id/waktu_mulai_tv"
        app:layout_constraintStart_toEndOf="@id/nama_bidang_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nama_peserta_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CC A vs Gonzaga A"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@id/nama_bidang_tv"
        app:layout_constraintEnd_toStartOf="@id/waktu_mulai_tv"
        app:layout_constraintTop_toBottomOf="@id/nama_lomba_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/waktu_mulai_tv"
        android:layout_width="wrap_content"
        android:maxWidth="100dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="In another 1 hour"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>